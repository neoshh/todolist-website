<%- include("header") -%> 

    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>

    <div class="box">
        <% items.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onChange="this.form.submit()" value="<%= item.id %>" name="checkedItem">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= title %>">
            </form>
        <% }); %>

        <form class="item" action="/" method="post">
            <input type="text" name="item" placeholder="Add New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= title %>>+</button>
        </form>
    </div>

<%- include("footer") -%> 
